{
  "name": "asymetrix-protocol",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "npx hardhat clean",
    "compile": "yarn clean && npx hardhat compile",
    "size": "npx hardhat size-contracts",
    "start-sandbox": "npx hardhat node",
    "test": "yarn clean && yarn hint && HIDE_DEPLOY_LOG=true hardhat test --bail",
    "hint": "solhint \"contracts/**/*.sol\"",
    "format": "prettier --config .prettierrc --write \"**/*.*.{ts,js}\" \"contracts/**/*.sol\"",
    "format:file": "prettier --config .prettierrc --write ",
    "deploy:sandbox:mainnet": "DEPLOY=v1.0.0.mainnet hardhat deploy --network localhost",
    "deploy:sandbox:sepolia": "DEPLOY=v1.0.0.sepolia hardhat deploy --network localhost",
    "deploy:sandbox:goerli": "DEPLOY=v1.0.0.goerli hardhat deploy --network localhost",
    "deploy:sandbox:vesting": "DEPLOY=v1.0.0.vesting hardhat deploy --network localhost",
    "deploy:sandbox:timelock": "DEPLOY=v1.0.0.timelock hardhat deploy --network localhost",
    "deploy:sepolia": "DEPLOY=v1.0.0.sepolia hardhat deploy --network sepolia",
    "deploy:sepolia:vesting": "DEPLOY=v1.0.0.vesting hardhat deploy --network sepolia",
    "deploy:sepolia:timelock": "DEPLOY=v1.0.0.timelock hardhat deploy --network sepolia",
    "deploy:goerli": "DEPLOY=v1.0.0.goerli hardhat deploy --network goerli",
    "deploy:goerli:vesting": "DEPLOY=v1.0.0.vesting hardhat deploy --network goerli",
    "deploy:goerli:timelock": "DEPLOY=v1.0.0.timelock hardhat deploy --network goerli",
    "deploy:mainnet": "DEPLOY=v1.0.0.mainnet hardhat deploy --network mainnet",
    "deploy:mainnet:vesting": "DEPLOY=v1.0.0.vesting hardhat deploy --network mainnet",
    "deploy:mainnet:timelock": "DEPLOY=v1.0.0.timelock hardhat deploy --network mainnet",
    "generate": "node ./scripts/generateContractList.js",
    "coverage": "rm -rf coverage coverage.json cache && npx hardhat coverage"
  },
  "devDependencies": {
    "@aave/core-v3": "^1.16.2",
    "@aave/periphery-v3": "^1.19.2",
    "@chainlink/contracts": "^0.6.1",
    "@chainlink/test-helpers": "^0.0.7-alpha",
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.1.3",
    "@openzeppelin/contracts-upgradeable": "^4.8.0",
    "@openzeppelin/hardhat-upgrades": "^1.21.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/deep-equal-in-any-order": "^1.0.1",
    "@types/mocha": "^9.1.0",
    "@types/node": ">=12.0.0",
    "chai": "^4.2.0",
    "chalk": "4.1.2",
    "deep-equal-in-any-order": "^2.0.6",
    "deploy-eip-1820": "^1.0.0",
    "dotenv": "^16.0.3",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "find": "0.3.0",
    "hardhat": "^2.12.2",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-deploy": "^0.11.20",
    "hardhat-deploy-ethers": "0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.8",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.40",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.0.0",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0"
  },
  "files": [
    "artifacts",
    "deployments/mainnet",
    "deployments/sepolia",
    "deployments/goerli",
    "contracts.json"
  ]
}
